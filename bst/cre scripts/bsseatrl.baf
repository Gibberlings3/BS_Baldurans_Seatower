IF
	OnCreation()
THEN
	RESPONSE #100
		StartTimer(77,6)
END

IF
	!StateCheck(Myself,STATE_REALLY_DEAD)
	HPLT(Myself,12)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		StartTimer(77,6)
		ChangeAnimationNoEffect("bsseatr2")  // Sea Troll
END

IF
	TimerExpired(77)
THEN
	RESPONSE #100
		StartTimer(77,6)
END